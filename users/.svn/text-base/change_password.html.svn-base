<!doctype html>
<html>

	<head>
		<meta charset="UTF-8">
		<title></title>
		<meta name="viewport" content="width=device-width,initial-scale=1,minimum-scale=1,maximum-scale=1,user-scalable=no" />
		<link href="../css/mui.min.css" rel="stylesheet" />
		
		<link rel="stylesheet" href="../css/iconfont.css"/>
		<link rel="stylesheet" href="../css/style.css"/>
	</head>

	<body>
		<div class="mui-center">
			<header class="mui-bar mui-bar-nav grzx_nav">
			    <a class="mui-action-back mui-icon mui-icon-left-nav mui-pull-left"></a>
			    <h1 class="mui-title">修改密码</h1>
			</header>
			
			<form class="change_password_group">
				<div class="change_password_tips">
					请输入6-20位字母和数字密码
				</div>
			    <div class="change_password_row">
			        <label>当前密码</label>
			    	<input type="text" class="" placeholder="请输入原密码" id="y_password">
			    </div>
			    <div class="change_password_row">
			        <label>新密码</label>
			        <input type="password" class="" placeholder="请输入新密码" id="n_password">
			    </div>
			    <div class="change_password_row">
			        <label>确定新密码</label>
			        <input type="password" class="" placeholder="请再次输入新密码" id="q_password">
			    </div>
			    <div class="change_password_btn_wrap">
	            	<button type="button" class="btn" id="submit">确 定</button>
	            	
	            </div>
			</form>
		</div>
		
		<script src="../js/mui.min.js"></script>
		<script type="text/javascript">
			mui.init()
			
			mui.ready(function(){//当DOM准备就绪时，指定一个函数来执行。
				document.getElementById('submit').addEventListener('tap',function(){
			        var y_password=document.getElementById('y_password').value;
			        var n_password=document.getElementById('n_password').value;
			        var q_password=document.getElementById('q_password').value;
			        
			        
			        if(y_password==""||y_password==null){
			        	mui.alert('原密码不能为空', '', function() {
//							info.innerText = '你刚关闭了警告框';
						});
						return;
			        }
			        if(n_password==""||n_password==null){
			        	mui.alert('新密码不能为空', '', function() {
//							info.innerText = '你刚关闭了警告框';
						});
						return;
			        }
			        if(q_password==""||q_password==null){
			        	mui.alert('确认信密码不能为空', '', function() {
//							info.innerText = '你刚关闭了警告框';
						});
						return;
			        }
			        
			        
			        mui.post('http://www.kfj.com/userinfo.php',{
						action: 'app_shop_info',
		            	info_id:self.info_id,
		            	y_password:y_password,
		            	n_password:n_password,
		            	q_password:q_password
					},function(data){
						console.log(data);
						//提交成功之后的处理逻辑
//						if(data.msg=="1"){
//							
//						}else{
//							console.log(data.msgbox);
//						}
					},'json'
					);
			        
			    });
			})
			
		</script>
	</body>

</html>